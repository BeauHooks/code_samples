<table>  <% c = 0 %>  <% rolodex.rolodex_signatures.each do |i| %>    <% c += 1 %>    <tr id="signature_<%= i.id %>" onclick="rowSelect(this, '<%= rolodex_signature_path(id: i.id) %>');", class="trigger">      <td class="signature" ondblclick="$.get('<%= edit_description_rolodex_signature_path(id: i.id) %>');" title="<%= i.description %>"><%= truncate(i.description, length: 25) %></td>      <td class="modify_date"><%=  i.updated_at.strftime('%m/%d/%Y') %></td>      <td class="modify_user"><%= i.update_employee.FullName %></td>      <td class="active"><%= check_box_tag('active', i.is_active, i.is_active?, onchange: "$.ajax({url: '#{mark_active_rolodex_signature_path(id: i.id)}', type: 'PUT'});") %></td>    </tr>  <% end %></table><%# OPTIMIZE: Easier way to inject js? %><% if c > 8 %>  <script type="text/javascript">    addWidth('rolodex_signatures', 45);  </script><% else %>  <script type="text/javascript">    fixWidth('rolodex_signatures', 45);  </script><% end %><% if @signature != "" && @signature != nil %>  <script type="text/javascript">    if($("#signature_<%= @signature.id %>") != undefined){      $("#signature_<%= @signature.id %>").click();    }  </script><% else %>  <script type="text/javascript">    //Click on the first document    if(document.getElementById("signatures_info").getElementsByTagName("tr")[0] != "undefined"){      document.getElementById("signatures_info").getElementsByTagName("tr")[0].click();    }  </script><% end %>