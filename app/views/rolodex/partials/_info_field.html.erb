<% cancel = "addToQueue('cancel_update_rolodex_info','rolodex/#{@entity.EntityID}/cancel_update_rolodex_info');" %><% if @field_type == "Name" %>  <% if @entity.IndCorp == "Individual" %>    <%= text_field_tag :FirstName, @entity.FirstName, onkeydown: "if(event.keyCode == 27){#{cancel}}", class: "first", data: {url: rolodex_path(@entity.EntityID), method: :put, remote: true} %><br />    <%= text_field_tag :MiddleInitial, @entity.MiddleInitial, onkeydown: "if(event.keyCode == 27){#{cancel}}", class: "middle", data: {url: rolodex_path(@entity.EntityID), method: :put, remote: true} %><br />    <%= text_field_tag :LastName, @entity.LastName, onkeydown: "if(event.keyCode == 27){#{cancel}}", class: "last", data: {url: rolodex_path(@entity.EntityID), method: :put, remote: true} %>  <% else %>    <%= text_field_tag :FullName, @entity.FullName, onkeydown: "if(event.keyCode == 27){#{cancel}}", class: "full_name", data: {url: rolodex_path(@entity.EntityID), method: :put, remote: true} %>  <% end %><% elsif @field_type == "Description" %>  <%= text_field_tag :Description, @entity.Description, onkeydown: "if(event.keyCode == 27){#{cancel}}", data: {url: rolodex_path(@entity.EntityID), method: :put, remote: true} %><% elsif @field_type == "IndCorp" %>  <%= select_tag :IndCorp, options_for_select([["Company", "Company"], ["Corporation", "Corporation"], ["Financial Institution", "Financial Institution"], ["Individual", "Individual"], ["LLC", "LLC"], ["Organization", "Organization"], ["Trust", "Trust"]], @entity.IndCorp), include_blank: false, onkeydown: "if(event.keyCode == 27){#{cancel}}", data: {url: rolodex_path(@entity.EntityID), method: :put, remote: true} %><% elsif @field_type == "CustomerType" %>  <%= select_tag :CustomerType, options_for_select([["Accountant", "Accountant"], ["Assistant", "Assistant"], ["Attorney", "Attorney"], ["Engineer", "Engineer"], ["Loan Officer", "Loan Officer"], ["Loan Processor", "Loan Processor"], ["President", "President"], ["Processor", "Processor"], ["Realtor", "Realtor"], ["Custom", "Custom"]], @entity.CustomerType), include_blank: true, onkeydown: "if(event.keyCode == 27){#{cancel}}", data: {url: rolodex_path(@entity.EntityID), method: :put, remote: true} %><% elsif @field_type == "SendDocsVia" %>  <%= select_tag :SendDocsVia, options_for_select([["Email", "Email"], ["Fax", "Fax"], ["Hand Deliver", "Hand Deliver"], ["Web Email", "Web Email"], ["Web-Based", "Web-Based"]], "#{@entity.SendDocsVia}"), include_blank: true, onkeydown: "if(event.keyCode == 27){#{cancel}}" %><% elsif @field_type == "EffectiveDate" %>  <%= text_field_tag :EffectiveDate, @entity.EffectiveDate, onkeydown: "if(event.keyCode == 27){#{cancel}}", data: {url: rolodex_path(@entity.EntityID), method: :put, remote: true} %><% elsif @field_type == "TaxID" %>  <%= text_field_tag :TaxID, @entity.TaxID, onkeydown: "if(event.keyCode == 27){#{cancel}}", data: {url: rolodex_path(@entity.EntityID), method: :put, remote: true} %><% end %>