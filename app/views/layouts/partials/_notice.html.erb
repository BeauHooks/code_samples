<div class="flash_notice_wrapper <%= @type == "confirmation" ? "confirmation" : "alert" %>">  <div class="overlay_header">    <h2><%= @title %></h2>  </div>  <div class="overlay_content">    <div id="notice">      <p><%= @notice.html_safe %></p>      <% n = 0 %>      <% @list.each do |item| %>        <% n += 1 %>        <br /><%= "#{n}) #{item}" %>      <% end %>      <% if @type_action_text != nil %>        <p style="margin-top: 15px;">Type "<%= @type_action_text %>" to continue: <%= text_field_tag :type_action_text, "", onkeydown: "if(event.keyCode == 13){$('#flash_notice_confirmation').click();}", style: "margin-left: 5px;" %></p>      <% end %>    </div>  </div>  <div class="overlay_footer">    <span class="button">      <% @type_action_text != nil ? click = "if(validateTypeText() ){$(this).attr('disabled', true); #{@post} closeOverlay('flash_notice');}" : click = " $(this).attr('disabled', true); #{@post} closeOverlay('flash_notice');" %>      <%= submit_tag @confirm, onclick: "#{click}", type: "button", id: "flash_notice_confirmation" if @post != "" || @confirm != "" %>      <%= submit_tag @close, onclick: "$(this).attr('disabled', true); #{@cancel_action} closeOverlay('flash_notice');", type: "button" unless @close.blank? && @cancel_action.blank? %>    </span>  </div></div><script type="text/javascript">  openOverlay("flash_notice");  <% if !@type_action_text.nil? %>    $("#type_action_text").focus();  <% elsif @close.blank? && @cancel_action.blank? %>    $("#flash_notice_confirmation").focus();  <% end %>  //$("#overlay_flash_notice input:last").focus();  function validateTypeText(){    if($("#type_action_text").val() != "<%= @type_action_text %>"){      alert("Confirmation text must be an exact match. This field is case-sensitive.");      $("#type_action_text").focus();      return false;    }    return true;  }</script>