<div id="sign_in">
  <center id="expire" style="display: none; margin-bottom: 5px;">
    <span style="color:red;">Logged out due to inactivity or session expired</span>
  </center>

  <div id="logo">
    <img src="/assets/logo.png" />
  </div>
  <div id="sign_in_content">
    <div id="form">
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div><p class="label"><%= f.label :email %>:</p>
      <p><%= f.email_field :email, :size => '22' %></p></div>
      <div class="label"><%= f.label :password %>:</div>
      <div><%= f.password_field :password, :size => '22' %></div>

      <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> <span class="label"><%= f.label :remember_me %></span></div>
      <% end -%>
      <div id="submit"><%= f.submit "Sign in" %></div>
      <% end %>
      <div id="links"><%= render "links" %></div>
      <p style="clear: both"></p>
    </div>

  </div>

  <% if Rails.env.staging? %>
    <br />
    <div id="logo">
      <h2 style="padding-top:12px;">Demo Login</h2>
    </div>
    <div id="sign_in_content">
      <div id="form">
