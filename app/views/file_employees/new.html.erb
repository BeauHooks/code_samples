<div id="add_employee">
	<div class="overlay_header">
		<h2>Add Employee</h2>
	</div>
	<div class="overlay_content">
		<%= form_tag('file_employees/display_search_results/', :remote => true) do |f| %>
		<h4>Search: <%= text_field_tag "search_value", params[:search_value],  :class => "search" %><%= image_submit_tag("search.png", :class => 'icon') %></h4>
		<% end %>
		<div class="border">
			<table class="grid_header">
				<tr>
					<td class="name">Name</td>
					<td class="phone">Phone</td>
					<td class="email">Email</td>
					<td class="actions" id="add_employee_last">Actions</td>
				</tr>
			</table>
			<div class="results" id="employee_search_results">
				<%= render "file_employees/search_results" %>
			</div>
		</div>
	</div>
	<div class="overlay_footer">
		<input type="button" value="Close" class="button close" onclick="closeOverlay('file_employees')" />
	</div>
</div>

<script type="text/javascript">
	openOverlay('file_employees');
</script>