<% update = "$.ajax({url: '#{payment_disbursement_path(id: payment_disbursement)}?view=#{@view}&' + $(this).attr('name') + '=' + $(this).val(), type: 'put'});" %>
<div class="tru_disbursement_row <%= payment_disbursement.funds_type == "check" ? "check" : payment_disbursement.funds_type == "wire" ? "wire" : "poc" %>" data-id="<%= payment_disbursement.id %>">
  <%= link_to "Remove", payment_disbursement_path(id: payment_disbursement, view: @view), method: :delete, remote: true %><br>
  <%= text_field_tag "payment_disbursement[payee_name]", payment_disbursement.payee_1, onchange: update, placeholder: "Payee", title: "Payee", class: "disbursement_info disbursement_payee_name", "data-identifier" => "payee_1_#{payment_disbursement.id}" %>
  <%= text_field_tag "payment_disbursement[amount]", number_to_currency( payment_disbursement.amount, unit: ""), onchange: update, placeholder: "Amount", title: "Amount", class: "disbursement_info disbursement_amount", "data-identifier" => "amount_#{payment_disbursement.id}" %>
  <%= select_tag "payment_disbursement[funds_type]" , options_for_select([["Check", "check"], ["Wire", "wire"], ["POC", "poc"]], payment_disbursement.funds_type), onchange: update, class: "disbursement_info", "data-identifier" => "funds_type_#{payment_disbursement.id}" %>
  <%= text_field_tag "payment_disbursement[address_1]", payment_disbursement.address_1, placeholder: "Address 1", class: "disbursement_info visible-check address", onchange: update, title: "Address 1", "data-identifier" => "address_1_#{payment_disbursement.id}" %>
  <%= text_field_tag "payment_disbursement[address_2]", payment_disbursement.address_2, placeholder: "Address 2", class: "disbursement_info visible-check address", onchange: update, title: "Address 2", "data-identifier" => "address_2_#{payment_disbursement.id}" %>
  <%= text_field_tag "payment_disbursement[city]", payment_disbursement.city, placeholder: "City", class: "disbursement_info visible-check", onchange: update, title: "City", "data-identifier" => "city_#{payment_disbursement.id}" %>
  <%= text_field_tag "payment_disbursement[state]", payment_disbursement.state, placeholder: "State", class: "disbursement_info visible-check", onchange: update, title: "State", "data-identifier" => "state_#{payment_disbursement.id}" %>
  <%= text_field_tag "payment_disbursement[zip]", payment_disbursement.zip, placeholder: "Zip", class: "disbursement_info visible-check", onchange: update, title: "Zip", "data-identifier" => "zip_#{payment_disbursement.id}" %>
  <%= text_field_tag "payment_disbursement[beneficiary_bank_name]", payment_disbursement.beneficiary_bank_name, placeholder: "Bank Name", class: "disbursement_info visible-wire", onchange: update, title: "Bank Name", "data-identifier" => "beneficiary_bank_name_#{payment_disbursement.id}" %>
  <%= text_field_tag "payment_disbursement[beneficiary_bank_routing]", payment_disbursement.beneficiary_bank_routing, placeholder: "Routing", class: "disbursement_info visible-wire", onchange: update, title: "Routing", "data-identifier" => "beneficiary_bank_routing_#{payment_disbursement.id}" %>
  <%= text_field_tag "payment_disbursement[beneficiary_account_number]", payment_disbursement.beneficiary_account_number, placeholder: "Account Number", class: "disbursement_info visible-wire", onchange: update, title: "Account Number", "data-identifier" => "beneficiary_account_number_#{payment_disbursement.id}" %>
  <%= text_field_tag "payment_disbursement[memo_1]", payment_disbursement.memo_1, placeholder: "Memo", class: "disbursement_info visible-check memo", onchange: update, title: "Memo", "data-identifier" => "memo_1_#{payment_disbursement.id}" %>
  <%= text_field_tag "payment_disbursement[b2b_information_message]", payment_disbursement.b2b_information_message, placeholder: "Memo", class: "disbursement_info visible-wire memo", onchange: update, title: "Memo", "data-identifier" => "b2b_information_message_#{payment_disbursement.id}" %>
</div>